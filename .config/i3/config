### Modes ###
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Launch mode
mode "launch" {
    bindsym q exec sysmenu.sh
    bindsym w exec weather.sh; mode "default"
    bindsym e exec $TERMINAL -e $EDITOR; mode "default"
    bindsym r exec arandr; mode "default"
    bindsym t exec gthumb; mode "default"
    bindsym z exec zathura; mode "default"
    bindsym i exec idea; mode "default"
    bindsym p exec pycharm; mode "default"

    bindsym a exec android; mode "default"
    bindsym s exec spotify; mode "default"
    bindsym f exec firefox; mode "default"
    bindsym g exec gimp; mode "default"
    bindsym h exec $TERMINAL -e htop; mode "default"
    bindsym l exec lollypop; mode "default"

    bindsym y exec firefox youtube.com; mode "default"
    bindsym x exec firefox --private-window; mode "default"
    bindsym v exec $TERMINAL -e vim; mode "default"
    bindsym b exec $FILEBROWSER; mode "default"
    bindsym m exec thunderbird; mode "default"

    bindsym Enter exec $TERMINAL; mode "default"

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym mod1+space mode "default"
}
bindsym $mod+space mode "launch"

mode "gaps" {
    bindsym h gaps outer all minus 1
    bindsym j gaps inner all minus 1
    bindsym k gaps inner all plus 1
    bindsym l gaps outer all plus 1

    bindsym Shift+h gaps outer all minus 5
    bindsym Shift+j gaps inner all minus 5
    bindsym Shift+k gaps inner all plus 5
    bindsym Shift+l gaps outer all plus 5

    # reset
    bindsym r gaps inner all set 5; gaps outer all set 0

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
    bindsym mod1+space mode "default"
}
bindsym $mod+g mode "gaps"


