#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	rofi -show drun
super + shift + d
	rofi -show run

# make sxhkd reload its configuration files:
# restart bspwm
super + shift + r
	pkill -USR1 -x sxhkd; \
	$HOME/.config/bspwm/bspwmrc \
	#bspc wm -r;

# exit bspwm
super + shift + e
	sysmenu.sh

# close and kill
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}
super + ctrl + m
	bspc node -g marked

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + a
	bspc node -f @parent

# focus the next/previous node in the current desktop
super + {_,shift + }n
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/monitor/desktop
super + grave
	bspc node -f last

# Cycle through desktops
super + {_, shift, ctrl} + Tab
	bspc desktop -f {last, next, prev}

# Handle multiple monitors
super + {_, shift} + BackSpace
	bspc {monitor -f last, node -d "next:focused" --follow}

# focus or send to the given desktop
super + {1-9,0}
	ws='{1-9,10}'; \
	bspc desktop -f "focused:^$ws"; \
	workspaces.sh "$ws"
super + shift + {1-9,0}
	bspc node -d "focused:^{1-9,10}" --follow


# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# Volume keys
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5% #increase sound volume
XF86AudioLowerVolume
	pactl set-sink-volume 0 -5% #decrease sound volume
XF86AudioMute
	pactl set-sink-mute 0 toggle # mute sound
shift + XF86AudioRaiseVolume
	pactl set-sink-volume 0 +1% #increase sound volume
shift + XF86AudioLowerVolume
	pactl set-sink-volume 0 -1% #decrease sound volume

super + plus
	pactl set-sink-volume 0 +5% #increase sound volume
super + minus
	pactl set-sink-volume 0 -5% #decrease sound volume
super + shift + plus
	pactl set-sink-volume 0 +1% #increase sound volume
super + shift + minus
	pactl set-sink-volume 0 -1% #decrease sound volume
super + numbersign
	pactl set-sink-mute 0 toggle # mute sound

# Media keys
XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioPrev
	playerctl previous
XF86AudioNext
	playerctl next

super + u
	playerctl previous
super + i
	playerctl play-pause
super + o
	playerctl next
super + p
	bspc desktop -f '^10'


# Brightness keys
XF86MonBrightnessUp
	xbacklight -inc 30 # increase screen brightness
XF86MonBrightnessDown
	xbacklight -dec 30 # decrease screen brightness
XF86Sleep
	dmtool lock || blurlock
XF86TouchpadToggle
	/some/path/toggletouchpad.sh # toggle touchpad


# Network keys
super + shift + w
	sudo wifi toggle || \
	if (nmcli radio wifi | grep disabled ); then nmcli radio wifi on; else nmcli radio wifi off; fi
super + shift + b
	sudo bluetooth toggle


XF86Tools
	$TERMINAL
XF86Search
	~/.config/rofi.sh
XF86LaunchA
	$TERMINAL -e gotop
XF86Explorer
	dolphin

super + shift + h
	~/.config/i3/fn-help.sh


